<Window x:Class="tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:tester"
        Title="MainWindow" Height="500" Width="700" Loaded="Page_Loaded" SizeChanged="Page_SizeChanged" Background="Black">
    <Canvas x:Name="mainCanvas">
        <local:HoverButton x:Name="btn1" Text="" Height="100" Width="100" Canvas.Top="277" Click="btn1_Clicked"  Canvas.Left="100"  HorizontalTextAlignment="Right" VerticalTextAlignment="Bottom" CornerRadius="5" RenderTransformOrigin="0.5,0.5"/>
        <TextBlock Name="gestureText" Canvas.Top="0" Canvas.Left="0" Foreground="White" Text=""/>
        <local:RadialMenu x:Name="radialMenu" Visibility="Hidden" TopText="Top" LeftText="Leftn" RightText="Right" BottomText="Cancel" bottomClick="bottom_Click"/>
        <local:HandCursor x:Name="hand" Canvas.Top="-50" Canvas.Left="-50"/>
    </Canvas>
</Window>
